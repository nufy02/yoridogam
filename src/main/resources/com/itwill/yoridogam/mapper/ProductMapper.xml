<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.yoridogam.mapper.ProductMapper">
	<insert id="create" parameterType="com.itwill.yoridogam.product.Product">
		insert into product(p_no,p_name,p_detail,p_category,p_price,p_type,p_poto)
		values(p_no_seq.nextval,#{p_name},#{p_detail},#{p_category},#{p_price},#{p_type},#{p_poto});
	</insert>
	<update id="updateByNo" parameterType="com.itwill.yoridogam.product.Product">
		update product 
		set #{p_name},#{p_detail},#{p_category},#{p_price},#{p_type},#{p_name} where #{p_no};
	</update>
	<delete id="deleteByNo" parameterType="java.lang.String">
		delete from product where p_no=#{p_no};
	</delete>
	<select id="selectByNo" parameterType="java.lang.String" resultType="com.itwill.yoridogam.product.Product">
		select * from product where p_no=#{p_no};
	</select>
	<select id="selectAll" parameterType="java.lang.String" resultType="com.itwill.yoridogam.product.Product">
		select * from product;
	</select>
</mapper>